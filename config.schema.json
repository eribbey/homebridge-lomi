{
  "pluginAlias": "LomiPlatform",
  "pluginType": "platform",
  "singular": true,
  "strictValidation": false,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "Lomi"
      },
      "email": {
        "title": "Email Address",
        "type": "string"
      },
      "password": {
        "title": "Password",
        "type": "string"
      },
      "deviceNickname": {
        "type": "string",
        "description": "Name of your Lomi device"
      }
    },
    "required": ["platform", "email", "password", "deviceNickname"],
    "additionalProperties": false
  }
}
