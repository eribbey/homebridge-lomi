{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Homebridge Lomi Platform Plugin Config Schema",
  "type": "object",
  "properties": {
    "platforms": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "platform": {
            "type": "string",
            "const": "LomiPlatform",
            "description": "The platform identifier, must be 'LomiPlatform'."
          },
          "name": {
            "type": "string",
            "description": "Optional name for the platform accessory."
          },
          "email": {
            "type": "string",
            "description": "Your email address for Cognito authentication."
          },
          "password": {
            "type": "string",
            "description": "Your password for Cognito authentication."
          },
          "deviceNickname": {
            "type": "string",
            "description": "The nickname of the Lomi device to display."
          }
        },
        "required": ["platform", "email", "password", "deviceNickname"],
        "additionalProperties": false
      }
    }
  },
  "required": ["platforms"],
  "additionalProperties": false
}
